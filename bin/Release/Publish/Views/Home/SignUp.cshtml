@model FreshSpotRewardsWebApp.Models.Card

@{
    ViewBag.Title = "Fresh Spot Rewards";
    ViewBag.CreateError = "";
}


<div class="container">
    <div class="row top-row">
        <div class="bkgd col-lg-5">
            <div>
                <img class="hottieImg" src="~/Assets/hottiefslogo.jpg" />
            </div>
        </div>
        <div class="col-lg-1"> </div>
        <div class="right-col col-lg-6">
            <div class="enrollment-form">


                @using (Html.BeginForm("Create", "Card", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal text-white">
                        <div class="form-section container" id="signUpDiv">
                            <h1>Sign up for Fresh Spot Rewards and earn free pizza!</h1>
                            <div class="mt-3 mb-3">
                                <div class="mb-5 mt-5"><h3 style="color:red">
                                    @TempData["ErrorMessage"]</h3> 
                                </div>
                            </div>
                            <div class="form-group formbox mt-5">
                                @Html.LabelFor(m => m.Email, "Email Address", htmlAttributes: new { @class = "control-label text-white" })
                                <div class="">
                                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control required", @value = Model.Email } })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                                </div>
                            </div>
                            <div class="form-group formbox mt-5">
                                @Html.LabelFor(m => m.CH_MPHONE, "Mobile Number", htmlAttributes: new { @class = "control-label text-white", @value = Model.CH_MPHONE })
                                <div class="">
                                    @Html.EditorFor(m => m.CH_MPHONE, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.CH_MPHONE, "", new { @class = "text-danger small"})
                                </div>
                            </div>
                            <div class="form-group formbox mt-5">
                                <input type="submit" class="btn btn-lg subBtn formbox" id="fsrSubmit" value="Sign Me Up!" />
                            </div>
                            

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

</script>



