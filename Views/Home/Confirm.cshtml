@model FreshSpotRewardsWebApp.Models.Card

@{
    ViewBag.Title = "Fresh Spot Rewards";
    ViewBag.ErrorMessage = "";
}

<div class="container">
    <div class="row top-row">
        <div class="bkgd col-lg-5">
            <div>
                <img class="hottieImg" src="~/Assets/hottiefslogo.jpg" alt="Fresh Spot rewards logo" />
            </div>
        </div>
        <div class="col-lg-1"> </div>
        <div class="right-col col-lg-6">

            <div class="verify-form container-fluid">
                @using (Html.BeginForm("CheckVerificationNumber", "Card", FormMethod.Post))
                {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal text-white">
                            <div class="form-section container" id="signupDiv">
                                <h4 class="mt-5">A security has been sent to your mobile number.</h4>
                                <h4 class="mt-5">Please enter the six-digit security code below. </h4>

                                <div class="form-group formbox mt-5">
                                    @Html.LabelFor(m => m.VerificationCode, "Verification Code", htmlAttributes: new { @class = "control-label text-white" })
                                    <div class="">
                                        @Html.EditorFor(m => m.VerificationCode, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group formbox mt-5">
                                    <input type="submit" class="btn btn-lg subBtn formbox" id="fsrSubmit" value="Submit" />
                                </div>
                                <div class="mt-5" id="error-text">
                                    @ViewBag.ErrorMessage
                                </div>

                            </div>
                        </div>
                    }
                    <div>
                        <p>@TempData["ErrorMessage"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>


            <script type="text/javascript">

            </script>
