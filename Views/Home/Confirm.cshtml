@model FreshSpotRewardsWebApp.Models.Card

@{
    ViewBag.Title = "Fresh Spot Rewards";
    ViewBag.ConfirmError = "";
}

<div class="container">
    <div class="row top-row">
        <div class="bkgd col-lg-5"> </div>
        <div class="col-lg-1"> </div>
        <div class="right-col col-lg-6">

            <div class="verify-form container-fluid">
                @using (Html.BeginForm("CheckVerificationNumber", "Card", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()


                    <div class="text-white form-section row form-box mt-2">
                        <h3> Please enter the six-digit confirmation code you received via text.</h3>
                    </div>

                    <div class="row  mt-2">
                        <div class="form-group formbox row form-section">
                            @Html.LabelFor(m => m.VerificationCode, "Verification Code:", htmlAttributes: new { @class = "text-white" })
                        </div>
                    </div>

                    <div class="row form-group mt-2">
                        <div class="verify-input">
                            @Html.EditorFor(m => m.VerificationCode, new { htmlAttributes = new { @class = "col-md-5 form-control required" } })
                        </div>
                        <div >
                            <input type="submit" class="btn subBtn formbox" id="confirmCodeBtn" value="Confirm Code" />
                        </div>
                    </div>

                }
            </div>
            </div>
        </div>
    </div>


            <script type="text/javascript">

            </script>
