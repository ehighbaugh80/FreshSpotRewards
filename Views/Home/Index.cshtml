@model FreshSpotRewardsWebApp.Models.Card

@{
    ViewBag.Title = "Fresh Spot Rewards";
    ViewBag.VerError = "";
}
<div class="container">
    <div class="row top-row">
        <div class ="bkgd col-lg-5"> </div>
        <div class="col-lg-1"> </div>
        <div class ="right-col col-lg-6">
            <h4>Use your mobile number to earn FREE pizza!</h4>

            <h1 class="main-cta">Sign up now for Fresh Spot Rewards, and get a FREE Hunk A Pizza&reg;!</h1>
            
            <h3 class="sub-cta">Enter your mobile number when you purchase Hunt Brothers Pizza and get a free Hunk or whole pizza for every 7 you buy.</h3>
        </div>
    </div>
</div>

<div class="container">

    <div class="enrollment-form">

        @using (Html.BeginForm("Create", "Card", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal text-white">
                <div class="form-section container">

                    <div class="form-group formbox mt-5">
                        @Html.LabelFor(m => m.Email, "Email Address", htmlAttributes: new { @class = "control-label col-md-4 text-white" })
                        <div class="col-md-8">
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control required" } })
                        </div>
                    </div>

                    <div class="form-group formbox mt-5">
                        @Html.LabelFor(m => m.CH_MPHONE, "Mobile Number", htmlAttributes: new { @class = "control-label col-md-4 text-white" })
                        <div class="col-md-8">
                            @Html.EditorFor(m => m.CH_MPHONE, new { htmlAttributes = new { @class = "form-control required" } })
                        </div>
                    </div>

                    <div class="form-group formbox">
                        <div class="col-md-offset-5">
                            <input type="button" class="btn verBtn" id="verBtnGet" value="Text Verification Code"
                                   onclick="this.value = 'Resend Verification Code'; document.getElementById('verBtnPost').style.display = 'block';" />
                        </div>
                    </div>

                    <div class="form-group formbox mt-5">
                        @Html.LabelFor(m => m.VerificationCode, "Verification Code", htmlAttributes: new { @class = "control-label col-md-4 text-white" })
                        <div class="col-md-8">
                            @Html.EditorFor(m => m.VerificationCode, new { htmlAttributes = new { @class = "form-control required text-black" } })
                        </div>
                    </div>


                    @*<div class="form-group formbox">
                        <label for="verCode" class="control-label col-md-4">Verification Code</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control required" id="verificationCode" />
                        </div>
                    </div>*@

                    <div id="ver-error" class="ver-error">
                        <p>@ViewBag.VerError</p>
                    </div>

                    <div class="form-indent container">
                        <div class="form-group formbox form-check mt-5">
                            <input type="checkbox" class="form-check" id="OptIn" onchange="document.getElementById('fsrSubmit').disabled = !this.checked" />
                            <label class="form-check-label" for="OptIn">Sign me up for Fresh Spot Rewards and give me a free Hunk A Pizza&reg;!</label>
                        </div>


                        <div class="form-group formbox mt-5">
                            <input type="submit" class="btn btn-lg subBtn formbox" id="fsrSubmit" value="Sign Me Up!" disabled 
                                   onclick="document.getElementById('ver-error').style.display = 'none'">
                        </div>
                    </div>

                    @*@Html.HiddenFor(m => m.ProgramID, new { value = Request.Params["programID"] })
        @Html.HiddenFor(m => m.SKUGroups, new { value = Request.Params["skuGroups"] })*@

                </div>
            </div>

        }
    </div>

</div>

<script type="text/javascript">
    document.getElementById('OptIn').checked = false;
    document.getElementById('verBtnPost').style.display = "none";
    }
</script>
