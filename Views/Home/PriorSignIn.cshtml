@model FreshSpotRewardsWebApp.Models.Card

@{
    ViewBag.Title = "You've already signed up for Fresh Spot Rewards -- Thanks, you're good to go!";
}


<div class="container">
    <div class="row">
        <div class="bkgd col-lg-5">
            <div class="thanksImg">
                <img src="~/Assets/thanksHBPizza.jpg" alt="Thanks for signing up for Fresh Spot Rewards" />
            </div>
        </div>
        <div class="col-lg-1"> </div>
        <div class="right-col col-lg-6">
            <div class="thanks">
                <h2 class="mt-3">@ViewBag.Title</h2>
                
                <p>
                    <h3 class="mt-3">You're Fresh Spot alternate ID is: <strong>@Html.DisplayFor(m => m.CH_MPHONE)</strong></h3>
                    <ul class="mt-5">
                        <li>
                            <h4>If you are a Rewards Spot member, select <strong>'Rewards Spot'</strong> at check out.</h4>
                        </li>
                        <li>
                            <h4>If you're not a Rewards Spot member, select <strong>'Fresh Spot Rewards'</strong> at check out.</h4>
                        </li>
                    </ul>
                </p>
            </div>
        </div>
    </div>
</div>
