@model FreshSpotRewardsWebApp.Models.Card

@{
    ViewBag.Title = "Fresh Spot Rewards";
}


<div class="container">
    <div class="row top-row">
        <div class="bkgd col-lg-5">
            <div>
                <img class="hottieImg" src="~/Assets/hottiefslogo.jpg" />
            </div>
        </div>
        <div class="col-lg-1"> </div>
        <div class="right-col col-lg-6">

            <div class="verify-form container-fluid">
                @using (Html.BeginForm("SendVerificationCode", "Card", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal text-white">
                        <div class="form-section container" id="signUpDiv">
                            <h4>A six-digit validation code will be sent to your mobile number. Please confirm it is correct before clicking submit. </h4>

                            <div class="form-group formbox mt-5">
                                @Html.LabelFor(m => m.CH_MPHONE, "Mobile Number", htmlAttributes: new { @class = "control-label text-white", @value = Model.CH_MPHONE })
                                <div class="">
                                    @Html.EditorFor(m => m.CH_MPHONE, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="mb-5 mt-5">
                                    <h3 style="color:red">
                                        @TempData["ErrorMessage"]
                                    </h3>
                                </div>
                            </div>
                            <div class="form-group formbox mt-5">
                                <input type="submit" class="btn btn-lg subBtn formbox" id="fsrSubmit" value="Submit" />
                            </div>

                        </div>
                    </div>
                }
                <div>
                    <div class="mb-5 mt-5"><h3 style="color:red">@TempData["ErrorMessage"]</h3></div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

</script>
