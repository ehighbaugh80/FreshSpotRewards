@model FreshSpotRewardsWebApp.Models.Card

@{
    ViewBag.Title = "Fresh Spot Rewards";
    ViewBag.Anchor = null;
}

@if (ViewBag.Anchor != null)
{
    <script>
        $(function () {
            window.location.hash = '#@ViewBag.Section';
        });
    </script>
}


<div class="container">
    <div class="row ">
        <div class="bkgd col-lg-5">
            <div >
                <img class="hottieImg" src="~/Assets/hottiefslogo.jpg" alt="Fresh Spot rewards logo" />
            </div>
        </div>
        <div class="col-lg-1"></div>
        <div class="right-col col-lg-5">
            <h4>Use your mobile number to earn FREE pizza!</h4>

            <h1 class="main-cta mt-3">Sign up now for Fresh Spot Rewards, and get a FREE Hunk A Pizza&reg;!</h1>

            <h3 class="sub-cta">Enter your mobile number when you purchase Hunt Brothers Pizza and get a free Hunk or whole pizza for every 7 you buy.</h3>
        </div>
    </div>
</div>

<div class="container-fluid buttonDiv existingRS" id="existingRS">
    <div class="error-text">
        <div class="mb-5 mt-5"><h3 style="color:red">@TempData["ErrorMessage"]</h3></div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1>Are you an existing Reward Spot member?</h1>
        </div>
    </div>
    <div class="row buttonDiv hsBtnDiv justify-content-around">
        <input type="button" href="#lookUpForm" class="btn btn-lg btn-success rsBtn mt-2 mb-2" value="Yes, I'm a Reward Spot member" id="yesRSmember" onclick="isRSMember()" />
        <a href='@Url.Action("SignUp", "Home")'>
            <input type="button" class="btn btn-lg btn-danger rsBtn mb-2 mt-2" value="No, I'm not a Reward Spot member" id=" noRSmember" />
        </a>
    </div>
</div>
<div class="spacer"></div>

<div class="container-fluid">
    
    <a name="lookUpForm"></a>
    <div class="enrollment-form d-none" id="lookUpPanel">
        <h1 class="mb-5 mt-5">How would you like to look up your Reward Spot account?</h1>
        @using (Html.BeginForm("HotSpotAccountLookUp", "Card", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            
            
        <div class="form-horizontal text-white">
            <div class="container" id="lookUpDiv">
                <div class="tab-content">
                   <ul class="nav nav-tabs justify-content-around">
                        <li class="active"><a data-toggle="tab" class="col-xs-12" href="#emailInput"> Email </a></li>
                        <li><a data-toggle="tab" class="col-xs-12" href="#mobileInput"> Mobile Number </a></li>
                        <li><a data-toggle="tab" class="col-xs-12" href="#cardNoInput"> Card Number </a></li>
                    </ul>

                    <div id="emailInput" class="tab-pane fade in active">
                        <div class="row">
                            <div class="col-md-12 mt-3">
                                @Html.LabelFor(m => m.Email, "Email Address", htmlAttributes: new { @class = "control-label text-white" })
                            </div>
                            <div class="col-md-12 mt-1">
                                @Html.TextBoxFor(m => m.Email, new { htmlAttributes = new { @class = "form-control"} })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div id="mobileInput" class="tab-pane fade">
                        <div class="row">
                            <div class="col-md-12 mt-3">
                                @Html.LabelFor(m => m.CH_MPHONE, "Mobile Number", htmlAttributes: new { @class = "control-label text-white" })
                            </div>
                            <div class="col-md-12 mt-1">
                                @Html.TextBoxFor(m => m.CH_MPHONE, new { htmlAttributes = new { @class = "form-control"} })
                            </div>
                        </div>
                    </div>

                    <div id="cardNoInput" class="tab-pane fade">
                        <div class="row">
                            <div class="col-md-12 mt-3">
                                @Html.LabelFor(m => m.AccountNumber, "Card Number", htmlAttributes: new { @class = "control-label text-white" })
                            </div>
                            <div class="col-md-12 mt-1">
                                @Html.TextBoxFor(m => m.AccountNumber, new { htmlAttributes = new { @class = "form-control"} })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-xs-3 mt-5 justify-content-between">
                <input type="submit" class="btn btn-lg btn-success" id="searchSubmitBtn" value="Look Up My Account" />
            </div>
        </div>
        }
    </div>
</div>

<script type="text/javascript">

    function isRSMember() {
        $('#lookUpPanel').removeClass('d-none').addClass('d-block');
        $('#existingRS').addClass('d-none');
    };
    


</script>



