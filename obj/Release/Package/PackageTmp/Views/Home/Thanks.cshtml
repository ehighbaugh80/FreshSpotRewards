@model FreshSpotRewardsWebApp.Models.Card

@{
    ViewBag.Title = "Thanks for signing up for Fresh Spot Rewards!";
}


<div class="container">
    <div class="row">
        <div class="bkgd col-lg-5">
            <div class="thanksImg">
                <img src="~/Assets/thanksHBPizza.jpg" alt="Thank you for signing up for Fresh Spot rewards." />
            </div>
        </div>
        <div class="col-lg-1"> </div>
        <div class="right-col col-lg-6">
            <h2 class="mt-4">@ViewBag.Title</h2>
            <h3 class="mt-3">Claim your free Hunk A Pizza&reg; at </h3>
            <h3><a href="https://goo.gl/maps/hxfExyCRDEEv1KL66" target="_blank" >Hot Spot - Sangaree</a> or </h3>
            <h3><a href="https://goo.gl/maps/FbTnfzfRfkg6AXvc9" target="_blank">Hot Spot - Pauline</a>.</h3>
            <ul class="mt-5">
                <li>
                    <h4>If you are a Rewards Spot member, present your card or enter your mobile number/alternate ID as usual.</h4>
                </li>
                <li>
                    <h4>If you're not a Rewards Spot member, enter your mobile number as your alternate ID at check out.</h4>
                </li>
            </ul>
            <h5 class="mt-5">*Limit one free Hunk A Pizza&reg; per mobile phone number.</h5>
        </div>
    </div>
</div>
